<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.thoughtworks.go"
	android:versionCode="1" android:versionName="1.0">
	<uses-permission android:name="android.permission.INTERNET" />

	<application android:icon="@drawable/go" android:label="@string/app_name">
		<activity android:name=".GoActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".About" android:label="@string/about_title" android:theme="@android:style/Theme.Dialog" />
		<activity android:name=".views.StatusActivity" android:label="@string/status_title"
			android:screenOrientation="portrait" />
		<activity android:name=".views.PipelineDetails" android:label="@string/pipeline_title"
			android:screenOrientation="portrait" />
		<activity android:name=".preferences.GoPreferences" android:label="@string/settings_title" />
	</application>

	<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
</manifest> 